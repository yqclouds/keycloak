<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">
    <persistence-unit name="keycloak-default" transaction-type="RESOURCE_LOCAL">
        <class>com.hsbc.unified.iam.core.entity.Client</class>
        <class>com.hsbc.unified.iam.core.entity.ClientAttribute</class>
        <class>com.hsbc.unified.iam.core.entity.Credential</class>
        <class>com.hsbc.unified.iam.core.entity.Realm</class>
        <class>com.hsbc.unified.iam.core.entity.RealmAttribute</class>
        <class>com.hsbc.unified.iam.core.entity.RealmRequiredCredential</class>
        <class>com.hsbc.unified.iam.core.entity.ComponentConfig</class>
        <class>com.hsbc.unified.iam.core.entity.Component</class>
        <class>com.hsbc.unified.iam.core.entity.UserFederationProvider</class>
        <class>com.hsbc.unified.iam.core.entity.UserFederationMapper</class>
        <class>com.hsbc.unified.iam.core.entity.Role</class>
        <class>com.hsbc.unified.iam.core.entity.RoleAttribute</class>
        <class>com.hsbc.unified.iam.core.entity.FederatedIdentity</class>
        <class>org.keycloak.models.jpa.entities.MigrationModelEntity</class>
        <class>com.hsbc.unified.iam.core.entity.User</class>
        <class>com.hsbc.unified.iam.core.entity.UserRequiredAction</class>
        <class>com.hsbc.unified.iam.core.entity.UserAttribute</class>
        <class>com.hsbc.unified.iam.core.entity.UserRoleMapping</class>
        <class>com.hsbc.unified.iam.core.entity.IdentityProvider</class>
        <class>com.hsbc.unified.iam.core.entity.IdentityProviderMapper</class>
        <class>com.hsbc.unified.iam.core.entity.ProtocolMapper</class>
        <class>com.hsbc.unified.iam.core.entity.UserConsent</class>
        <class>com.hsbc.unified.iam.core.entity.UserConsentClientScope</class>
        <class>com.hsbc.unified.iam.core.entity.AuthenticationFlow</class>
        <class>com.hsbc.unified.iam.core.entity.AuthenticationExecution</class>
        <class>com.hsbc.unified.iam.core.entity.AuthenticatorConfig</class>
        <class>com.hsbc.unified.iam.core.entity.RequiredActionProvider</class>
        <class>org.keycloak.models.jpa.session.PersistentUserSessionEntity</class>
        <class>org.keycloak.models.jpa.session.PersistentClientSessionEntity</class>
        <class>com.hsbc.unified.iam.core.entity.Group</class>
        <class>com.hsbc.unified.iam.core.entity.GroupAttribute</class>
        <class>com.hsbc.unified.iam.core.entity.GroupRoleMapping</class>
        <class>com.hsbc.unified.iam.core.entity.UserGroupMembership</class>
        <class>com.hsbc.unified.iam.core.entity.ClientScope</class>
        <class>com.hsbc.unified.iam.core.entity.ClientScopeAttribute</class>
        <class>com.hsbc.unified.iam.core.entity.ClientScopeRoleMapping</class>
        <class>com.hsbc.unified.iam.core.entity.ClientScopeClientMapping</class>
        <class>com.hsbc.unified.iam.core.entity.DefaultClientScopeRealmMapping</class>
        <class>com.hsbc.unified.iam.core.entity.ClientInitialAccess</class>

        <!-- JpaAuditProviders -->
        <class>org.keycloak.events.jpa.EventEntity</class>
        <class>org.keycloak.events.jpa.AdminEventEntity</class>

        <!-- Authorization -->
        <class>org.keycloak.authorization.jpa.entities.ResourceServerEntity</class>
        <class>org.keycloak.authorization.jpa.entities.ResourceEntity</class>
        <class>org.keycloak.authorization.jpa.entities.ScopeEntity</class>
        <class>org.keycloak.authorization.jpa.entities.PolicyEntity</class>
        <class>org.keycloak.authorization.jpa.entities.PermissionTicketEntity</class>
        <class>org.keycloak.authorization.jpa.entities.ResourceAttributeEntity</class>

        <!-- User Federation Storage -->
        <class>org.keycloak.storage.jpa.entity.BrokerLinkEntity</class>
        <class>org.keycloak.storage.jpa.entity.FederatedUser</class>
        <class>org.keycloak.storage.jpa.entity.FederatedUserAttributeEntity</class>
        <class>org.keycloak.storage.jpa.entity.FederatedUserConsentEntity</class>
        <class>org.keycloak.storage.jpa.entity.FederatedUserConsentClientScopeEntity</class>
        <class>org.keycloak.storage.jpa.entity.FederatedUserCredentialEntity</class>
        <class>org.keycloak.storage.jpa.entity.FederatedUserGroupMembershipEntity</class>
        <class>org.keycloak.storage.jpa.entity.FederatedUserRequiredActionEntity</class>
        <class>org.keycloak.storage.jpa.entity.FederatedUserRoleMappingEntity</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="jboss.as.jpa.managed" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
